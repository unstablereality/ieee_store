<h1>Create Order Report</h1>
<%= form_tag(edit_class_size_order_reports_path) do %>
  <table>
    <thead>
      <tr>
        <th>&nbsp;</th>
        <th>Name</th>
        <th>Deprecated</th>
      </tr>
    </thead>
    <tbody>
      <% @parts_kits.each do |pk| %>
        <tr>
          <td><%= check_box_tag "parts_kit_ids[]", pk.id %></td>
          <td><%= pk.name %></td>
          <% if pk.deprecated.eql?(true)%>
            <td>Yes</td>
          <% else %>
            <td>No</td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <p><%= submit_tag "Use Selected Kits", :class => 'buttons' %></p>
<% end %>
