<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <ul class= "error_frame">
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <div class = "field" >
    <% if @current_user.security == "Administrator" %>
      <h3>Security Level</h3>
      <%= select(:user, :security, options_for_select(["Shopkeeper", "Administrator"], @user.security)) %>
    <% end %>
  </div>
  <div class = "field" >
    <h3><%= f.label :name %></h3>
    <%= f.text_field :name %>
  </div>
  <div class = "field" >
    <h3><%= f.label :email %></h3>
    <%= f.text_field :email %>
  </div>
    <div class = "field" >  
    <h3><%= f.label :password %></h3>
    <%= f.password_field :password %>
  </div>
  <div class = "field" >
    <h3><%= f.label :password_confirmation %></h3>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="buttons"><%= f.submit %></div>
<% end %>

